<view class="login-page">
  <!-- <block wx:if="{{ statusBarHeight !== 0 }}">
    <view class="status-style" style="height: {{statusBarHeight}}px;"></view>
  </block> -->
  <view class="logn-main">
    <image class="login-bg" mode="widthFix" src="{{ loginBg }}"></image>
    <view class="login-content">
      <view class="login-avatar">
        <button class="login-avatar-inner" open-type="chooseAvatar" bind:chooseavatar="bindUplaodPhoto">
          <image wx:if="{{!avatarUrl}}" class="default-photo" mode="aspectFit" src="{{defaultAvatar}}"></image>
          <image wx:else class="avatar-photo" mode="aspectFit" src="{{avatarUrl}}"></image>
          <text>上传头像</text>
        </button>
      </view>
      <form class="login-form" catchsubmit="bindSubmit">
        <view class="input-cell">
          <input class="input-item" name="realName" placeholder-class="holder-center" placeholder="真实姓名" />
        </view>
        <view class="input-cell">
          <input class="input-item" name="phone" placeholder-class="holder-center" placeholder="手机号码" />
        </view>
        <view class="input-cell">
          <input class="input-item" name="registerCode" placeholder-class="holder-center" placeholder="内部注册码" />
        </view>
        <view class="btn-cell">
          <button type="default" hover-class="none" formType="submit">登录</button>
        </view>
      </form>
    </view>
  </view>
</view>
