<view class="not-tab-page">
  <view class="mine-bg-box">
    <image class="mine-bg" mode="widthFix" src="{{ mineBg }}"></image>
  </view>
  <view class="mine-main">
    <view class="user-box">
      <button class="avatar-wrapper avatar-relative" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
        <view class="avatar-btn">
          <view class="avatar-plus">
            <text>+</text>
          </view>
          <view class="avatar-mask"></view>
        </view>
        <image src="{{avatarUrl}}"></image>
      </button>
      <view>{{realName}}</view>
      <view class="cellphone">{{cellphone}}</view>
    </view>
    <view class="person-info-wrap">
      <view class="person-info-inner">
        <view class="pii-title">我的个人资料修改</view>
        <form class="personInfo-form" catchsubmit="bindSubmit">
          <view class="input-cell">
            <input class="input-item" name="realName" placeholder="真实姓名" value="{{user.realName}}" />
          </view>
          <view class="input-cell">
            <input class="input-item" type="number" name="phone" placeholder="手机号码" value="{{user.phone}}" />
          </view>
          <view class="input-cell">
            <input class="input-item" name="licensePlate" placeholder="车牌号" value="{{user.licensePlate}}" />
          </view>
          <view class="textarea-cell">
            <textarea class="textarea-item"
              placeholder-class="textarea-holder"
              name="brief"
              placeholder="个人简介"
              cursor-spacing="20rpx"
              show-confirm-bar="{{false}}"
              value="{{user.brief}}"
            />
          </view>
          <view class="btn-cell">
            <button type="default" hover-class="none" formType="submit">确认修改</button>
          </view>
        </form>
      </view>
    </view>
  </view>
</view>
