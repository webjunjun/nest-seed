/* 头像修改 */
.avatar-relative {
  position: relative;
}
.avatar-relative .avatar-btn {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
}
.avatar-btn .avatar-plus {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  width: 76rpx;
  height: 76rpx;
  border: 1rpx dashed #fff;
  border-radius: 8rpx;
}
.avatar-plus text {
  font-size: 60rpx;
  color: #fff;
  font-weight: 100;
  line-height: 76rpx;
}
.avatar-btn .avatar-mask {
  width: 110rpx;
  height: 110rpx;
  background-color: rgba(0, 0, 0, .3);
}

/* 个人资料 */
.person-info-wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.person-info-inner {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.pii-title {
  font-size: 32rpx;
  color: #303030;
  padding-bottom: 30rpx;
}

/* 表单 */
.personInfo-form .input-cell {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.input-cell .input-item {
  width: 100%;
  height: 90rpx;
  font-size: 34rpx;
  color: #333;
}
.textarea-cell {
  width: 100%;
  height: 140rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.textarea-cell .textarea-item {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  color: #333;
  /* 解决textarea的光标与placeholder错位 */
  line-height: normal;
}
.textarea-holder {
  font-size: 34rpx;
}
.btn-cell button {
  width: 100%!important;
  height: 80rpx;
  font-size: 34rpx!important;
  font-weight: normal!important;
  color: #fff!important;
  border-radius: 8rpx!important;
  background-color: #fc8c44!important;
}
