/* 就餐、预约 */
.diner-tab-wrap {
  width: 100%;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.diner-tab-wrap:last-child {
  padding-bottom: 30rpx;
}
.diner-tab-inner {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.dti-title {
  font-size: 32rpx;
  color: #303030;
  padding-bottom: 30rpx;
}
.diner-tab-box {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.diner-tab-box .dti-rest {
  font-size: 20rpx;
  color: #ff6a03;
}
.booking-wrap {
  display: flex;
  box-sizing: border-box;
}
.booking-wrap .booking-box {
  font-size: 30rpx;
  color: #fff;
  flex: 1;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 30rpx;
  position: relative;
}
.booking-wrap .booking-box + .booking-box {
  margin-left: 20rpx;
}
.booking-info .booking-done {
  position: absolute;
  right: 0rpx;
  top: 40rpx;
  width: 90rpx;
  height: 30rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  background-color: #999;
  font-size: 18rpx;
  text-align: center;
  line-height: 30rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.booking-box .booking-date {
  font-size: 18rpx;
  margin-top: 16rpx;
}
.diner-tab-inner .booking-tips {
  font-size: 24rpx;
  color: #6d6d6d;
  text-align: justify;
  margin-top: 30rpx;
}
.today-one {
  background: linear-gradient(135deg, #fd6991, #f91250);
}
.today-two {
  background: linear-gradient(135deg, #ffca13, #ff6a03);
}
.today-three {
  background: linear-gradient(135deg, #52e599, #08c163);
}
.tomorrow-one {
  background: linear-gradient(135deg, #a59d9f, #3b3536);
}
.tomorrow-two {
  background: linear-gradient(135deg, #75df6a, #ffdb13);
}
.recipe-arrow {
  font-size: 20rpx;
  color: #6d6d6d;
}
.recipe-arrow .maright {
  margin-left: 10rpx;
}
