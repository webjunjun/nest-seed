                <view class="booking-type">晚餐</view>
                <view class="booking-done">未预约</view>
              </view>
              <view class="booking-date">01/01 18:10-19:30</view>
            </view>
          </view>
        </view>
      </view>
      <view class="diner-tab-wrap">
