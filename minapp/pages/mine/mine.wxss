.mine-page {
  width: 100%;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 110rpx;
  box-sizing: border-box;
}
.mine-main {
  width: 100%;
  position: relative;
  z-index: 1;
}

/* 我的背景 */
.mine-bg-box {
  width: 100%;
  height: 300rpx;
  background-color: #3275fd;
  position: absolute;
}
.mine-bg-box image {
  width: 100%;
  height: 280rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

/* 我的信息 */
.user-box{
  width: 100%;
  height: 250rpx;
  font-size: 36rpx;
  color: #fff;
  padding-top: 50rpx;
  text-align: center;
}
.user-box .avatar-wrapper, .user-box .avatar {
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  overflow: hidden;
}
.user-box .avatar-wrapper image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  overflow: hidden;
}
.user-box .cellphone {
  font-size: 24rpx;
}

.mine-flex {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin: 30rpx 0;
}
.mine-flex .weui-flex__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
}
.mine-flex .weui-flex__item + .weui-flex__item {
  margin-left: 30rpx;
}
.mine-first {
  width: 60rpx;
  height: 76rpx;
}
.mine-second {
  width: 70rpx;
  height: 76rpx;
}

/* 我的菜单 */
.list-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.list-box .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.list-item .list-info {
  display: flex;
  align-items: center;
}
.list-info .list-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #3275fd;
  border-radius: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  overflow: hidden;
  margin-right: 24rpx;
}
.list-icon image{
  width: 40rpx;
  height: 40rpx;
}
.list-info .list-txt {
  font-size: 30rpx;
  color: #333;
  margin-top: 12rpx;
}
.list-item .list-right {
  width: 30rpx;
  height: 30rpx;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  transform: rotate(-45deg);
}
