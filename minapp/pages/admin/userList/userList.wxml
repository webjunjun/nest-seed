<view wx:if="{{list.length <= 0}}" class="weui-loadmore weui-loadmore_line">
  <view class="weui-loadmore__tips weui-loadmore__tips_in-line">暂无数据</view>
</view>
<view class="preview-wrap">
  <view
    wx:for="{{list}}"
    wx:key="index"
    class="weui-form-preview"
  >
    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">姓名</view>
        <view class="weui-form-preview__value_in-hd">{{item.realName}}</view>
      </view>
    </view>
    <view class="weui-form-preview__bd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">角色</view>
        <view class="weui-form-preview__value">{{item.roleName || ''}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">手机号</view>
        <view class="weui-form-preview__value">{{item.phone}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">车牌号</view>
        <view class="weui-form-preview__value">{{item.licensePlate}}</view>
      </view>
    </view>
    <view class="weui-form-preview__ft">
      <!-- <view
        class="weui-form-preview__btn weui-form-preview__btn_default"
        data-id="{{item.id}}"
        data-num="{{index}}"
        bindtap="deleteItem"
      >删除</view> -->
      <view
        class="weui-form-preview__btn weui-form-preview__btn_primary"
        data-id="{{item.id}}"
        data-num="{{index}}"
        bindtap="modifyItem"
      >设置角色</view>
    </view>
  </view>
</view>
<mp-actionSheet bindactiontap="btnClick" show="{{showDialog}}" actions="{{groups}}" title="设置用户角色">
</mp-actionSheet>
