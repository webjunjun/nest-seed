/* 拼车出行信息 */
.commute-wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.commute-inner {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.commute-title-box {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.commute-title {
  font-size: 32rpx;
  color: #303030;
  padding-bottom: 30rpx;
}
.commute-title-box .commute-tag {
  display: flex;
  font-size: 28rpx;
  color: #fff;
}
.commute-tag .commute-fail {
  height: 30rpx;
  padding: 8rpx 16rpx;
  line-height: 30rpx;
  border-radius: 8rpx;
  background-color: #08c163;
}
.commute-tag .commute-success {
  height: 30rpx;
  padding: 8rpx 16rpx;
  line-height: 30rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
  background-color: #ff6a03;
}
.commute-list .commute-item {
  display: flex;
  margin-bottom: 30rpx;
  font-size: 0;
  box-sizing: border-box;
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #f8f0c4;
}
.commute-item .commute-right {
  flex: 1;
}
.commute-list .commute-item:last-child {
  margin-bottom: 0;
}
.commute-list .commute-edit {
  position: relative;
  background-color: #b8fad9;
}
.commute-item .commute-left {
  margin-right: 30rpx;
  text-align: center;
}
.commute-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background-color: #c9c9c9;
  overflow: hidden;
}
.commute-left .commute-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
  max-width: 110rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.commute-right .commute-date {
  font-size: 30rpx;
  color: #333;
}
.commute-date text {
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(to right, #1d22cb, #272491);
  padding: 0 8rpx;
  border-radius: 8rpx;
  vertical-align: 6rpx;
  margin-left: 10rpx;
}
.commute-right .commute-addr {
  font-size: 28rpx;
  margin-top: -8rpx;
}
.commute-right .commute-desciption {
  font-size: 28rpx;
  color: #333;
}
.commute-desciption .commute-cell-addr {
  font-size: 24rpx;
  display: inline-block;
  text-align: justify;
  width: calc(100% - 100rpx);
  vertical-align: top;
}
.commute-cell-addr .commute-addr-atom {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  background: linear-gradient(to right, #52e599, #08c163);
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.commute-item .commute-btn {
  display: none;
}
.commute-edit .commute-btn {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  border-top-right-radius: 16rpx;
  border-top: 50rpx solid #ff6a03;
  border-right: 50rpx solid #ff6a03;
  border-left: 50rpx solid transparent;
  border-bottom: 50rpx solid transparent;
}
.commute-btn text {
  display: inline-block;
  width: 50rpx;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: -30rpx;
  right: -40rpx;
  transform: rotate(45deg);
}
.commute-addr .arrow-box {
  display: inline-block;
  width: 50rpx;
  height: 44rpx;
  position: relative;
  top: 10rpx;
  left: 0;
}
.arrow-box .arrow-line {
  position: absolute;
  top: 22rpx;
  left: 0;
  width: 50rpx;
  height: 1rpx;
  background-color: #232323;
}
.arrow-right {
  position: absolute;
  right: 0;
  top: 16rpx;
  width: 16rpx;
  height: 16rpx;
  border-right: 1rpx solid #232323;
  border-bottom: 1rpx solid #232323;
  transform: rotate(-45deg);
}

/* 预约弹出 */
.notice {
  width: 600rpx;
  height: 700rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-300rpx, -400rpx);
}
.notice .notice-image {
  width: 100%;
}
.notice .notice-head {
  width: 180rpx;
  height: 180rpx;
  background-color: #fff;
  border-radius: 100%;
  position: absolute;
  left: 210rpx;
  top: 70rpx;
  box-shadow: 0 0 30px 4px rgba(0, 0, 0, .1);
  z-index: 1;
}
.notice-head .notice-icon {
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.notice .notice-content {
  width: 500rpx;
  height: 370rpx;
  border-radius: 16rpx;
  background-color: #fff;
  position: absolute;
  left: 50rpx;
  top: 150rpx;
  box-shadow: 0 0 30px 4px rgba(0, 0, 0, .1);
}
.notice-content .notice-title {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin-top: 150rpx;
  margin-bottom: 48rpx;
}
.notice-content .notice-msg {
  font-size: 26rpx;
  color: rgb(51, 51, 51, .5);
  text-align: center;
}
.notice .notice-btn-area {
  width: 100%;
  box-sizing: border-box;
  padding: 0 50rpx;
  margin-top: 210rpx;
}
.notice-btn-area button {
  width: 100%!important;
  height: 76rpx;
  font-size: 30rpx!important;
  font-weight: normal!important;
  color: #fff!important;
  border-radius: 76rpx!important;
  background: linear-gradient(to right, #be7ef1, #5b60f9);
}
.weui-loadmore_line .weui-loadmore__tips {
  background-color: transparent;
}
