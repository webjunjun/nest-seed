/* 我的、我的就餐与出行、个人资料、单页面顶部样式 */
.mine-page {
  width: 100%;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 110rpx;
  box-sizing: border-box;
}
.mine-main {
  width: 100%;
  position: relative;
  z-index: 1;
}

/* 我的背景 */
.mine-bg-box {
  width: 100%;
  height: 300rpx;
  background-color: #3275fd;
  position: absolute;
}
.mine-bg-box image {
  width: 100%;
  height: 280rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

/* 我的信息 */
.user-box{
  width: 100%;
  height: 250rpx;
  font-size: 36rpx;
  color: #fff;
  padding-top: 50rpx;
  text-align: center;
}
.user-box .avatar-wrapper, .user-box .avatar {
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  overflow: hidden;
}
.user-box .avatar-wrapper image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  overflow: hidden;
}
.user-box .cellphone {
  font-size: 24rpx;
}
