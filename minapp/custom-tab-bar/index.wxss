.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: white;
  display: flex;
  box-shadow: 0 0 30px 4px rgba(0, 0, 0, .1);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 48rpx;
  height: 48rpx;
  margin-top: 6rpx;
  margin-bottom: 4rpx;
}

.tab-bar-item view {
  font-size: 24rpx;
}
